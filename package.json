{
  "name": "module-boilerplate",
  "version": "0.0.0-development",
  "main": "src/index.js",
  "browser": "dist/index.js",
  "repository": "git@github.com:Landish/module-boilerplate.git",
  "author": "Lado Lomidze <lado.lomidze@gmail.com> (https://ladolomidze.com/)",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn format",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext"
    ],
    "globals": {
      "window": true,
      "test": true,
      "expect": true
    },
    "parser": "babel-eslint",
    "rules": {
      "function-paren-newline": 0,
      "spaced-comment": 0,
      "arrow-parens": 0,
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "cz": "git-cz",
    "format": "prettier --use-tabs --trailing-comma es5 --use-tabs --single-quote --write '**/*.js' && eslint --cache --fix ./",
    "lint": "eslint --cache src",
    "postlint": "yarn run flow check",
    "prebuild": "run-p 'rimraf dist' 'lint'",
    "build": "babel src -d dist",
    "test": "jest",
    "test:watch": "yarn lint && jest --watch",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "flow-bin": "0.59.0",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "lint-staged": "^4.2.1",
    "prettier": "^1.8.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^7.0.2",
    "xo": "0.18.2"
  },
  "dependencies": {
    "babel-eslint": "8.0.2",
    "css-color-names": "0.0.4",
    "pure-color": "1.3.0"
  }
}
